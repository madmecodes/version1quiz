# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# Allowed hosts (domains that can access the API)
ALLOWED_HOSTS=localhost,127.0.0.1,your-railway-domain.app

# CORS - Frontend URLs allowed to make requests
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-vercel-domain.vercel.app

# CSRF Trusted Origins - allow these domains to submit forms/make requests
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-vercel-domain.vercel.app,https://your-railway-domain.app

# Google OAuth (Optional - only if using Google login)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_SECRET=your-google-oauth-secret
